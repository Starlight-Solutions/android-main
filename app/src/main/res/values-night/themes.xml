<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sleep_application" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/light_grey</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/light_grey</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/light_grey</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:titleTextColor">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:colorButtonNormal">@color/dark_purple</item>
        <item name="android:windowBackground">@color/dark_grey</item>

    </style>






</resources>